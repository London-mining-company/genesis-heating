# Genesis Heating Landing Page - Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE DATABASE
# ===========================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Public URL for the frontend
VITE_APP_URL=http://localhost:5173
NODE_ENV=development

# ===========================================
# EMAIL SERVICE (Choose one)
# ===========================================
# Resend (Recommended)
RESEND_API_KEY=
RESEND_AUDIENCE_ID=
# SendGrid
SENDGRID_API_KEY=

# ===========================================
# AUTOMATION & INTEGRATIONS
# ===========================================
# Airtable CRM Integration
AIRTABLE_API_KEY=
AIRTABLE_BASE_ID=
AIRTABLE_TABLE_NAME=Leads

# Slack Webhook for notifications
SLACK_WEBHOOK_URL=

# Zapier / Make (Integromat) Webhook for Lead Automation
AUTOMATION_WEBHOOK_URL=
ZAPIER_WEBHOOK_URL=

# HubSpot CRM Integration
HUBSPOT_PORTAL_ID=
HUBSPOT_FORM_ID=

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# PostHog / Plausible
PLAUSIBLE_DOMAIN=genesisheating.ca

# ===========================================
# SECURITY
# ===========================================
# Secret for signing tokens (generate with: openssl rand -base64 32)
APP_SECRET=your-secret-key-here
